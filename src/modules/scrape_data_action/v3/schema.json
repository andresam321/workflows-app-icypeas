{
  "metadata": {
    "workflows_module_schema_version": "1.0.0"
  },
  "fields": [
    {
      "id": "profile",
      "type": "object",
      "label": "Single Profile (Optional)",
      "validation": { "required": false },
      "ui_options": {
        "ui_widget": "json_editor",
        "placeholder": "{ \"firstname\": \"Marc\", \"lastname\": \"Lachabody\", \"companyOrDomain\": \"nec technologies\" }"
      }
    },
    {
      "id": "profiles",
      "type": "array",
      "label": "Bulk Profiles (Max 50)",
      "validation": { "required": false },
      "items": {
        "type": "object",
        "properties": {
          "firstname": { "type": "string" },
          "lastname": { "type": "string" },
          "companyOrDomain": { "type": "string" },
          "jobTitle": { "type": "string" }
        }
      },
      "ui_options": {
        "ui_widget": "code_editor",
        "placeholder": "[{ \"firstname\": \"Marc\", \"lastname\": \"Lachabody\", \"companyOrDomain\": \"nec technologies\" }]"
      }
    },
    {
      "type": "connection",
      "id": "api_connection",
      "label": "Icypeas API Key",
      "description": "Select your connected Icypeas API key",
      "allowed_connection_management_types": ["managed", "custom"]
    }
  ],
  "ui_options": {
    "ui_order": ["profile", "profiles", "api_connection"]
  }
}
