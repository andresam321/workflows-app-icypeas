{
  "metadata": {
    "workflows_module_schema_version": "1.0.0"
  },
  "fields": [
    {
      "type": "connection",
      "id": "crm_connection",
      "label": "CRM Connection",
      "allowed_app_types": ["salesforce", "hubspot"],
      "allowed_connection_management_types": ["managed", "custom"],
      "validation": {
        "required": true
      }
    },
    {
      "type": "object",
      "id": "object_type",
      "label": "Contact Type",
      "description": "The type of contact to create in your CRM",
      "ui_options": {
        "ui_widget": "SelectWidget"
      },
      "choices": {
        "values": [
          {
            "value": "contact",
            "label": "Contact"
          },
          {
            "value": "lead",
            "label": "Lead"
          }
        ]
      },
      "content": {
        "type": ["managed"],
        "content_objects": [
          {
            "id": "object_types"
          }
        ]
      },
      "validation": {
        "required": true
      }
    },
    {
      "type": "string",
      "id": "contacts_data",
      "label": "Contacts Data",
      "description": "JSON array of contacts to create. Each contact should have required fields for the selected contact type.",
      "default": "[\n  {\n    \"FirstName\": \"John\",\n    \"LastName\": \"Doe\",\n    \"Email\": \"john.doe@example.com\",\n    \"Phone\": \"+1234567890\",\n    \"Company\": \"Acme Inc\"\n  },\n  {\n    \"FirstName\": \"Jane\",\n    \"LastName\": \"Smith\",\n    \"Email\": \"jane.smith@example.com\",\n    \"Phone\": \"+0987654321\",\n    \"Company\": \"XYZ Corp\"\n  }\n]",
      "ui_options": {
        "ui_widget": "CodeblockWidget",
        "ui_options": {
          "language": "json"
        }
      },
      "validation": {
        "required": true
      }
    },
    {
      "type": "array",
      "id": "required_fields",
      "label": "Required Fields",
      "description": "Fields that must be present for each contact",
      "items": {
        "type": "string",
        "content": {
          "type": ["managed"],
          "content_objects": [
            {
              "id": "fields"
            }
          ]
        }
      },
      "default": ["FirstName", "LastName", "Email"]
    },
    {
      "type": "boolean",
      "id": "duplicate_check",
      "label": "Check for Duplicates",
      "description": "Check if contacts already exist in the CRM before creating",
      "default": true
    },
    {
      "type": "object",
      "id": "duplicate_criteria",
      "label": "Duplicate Check Criteria",
      "description": "Fields to use for duplicate checking",
      "properties": [
        {
          "type": "array",
          "id": "fields",
          "label": "Fields to Check",
          "items": {
            "type": "string",
            "content": {
              "type": ["managed"],
              "content_objects": [
                {
                  "id": "fields"
                }
              ]
            }
          },
          "default": ["Email"]
        },
        {
          "type": "string",
          "id": "match_rule",
          "label": "Matching Rule",
          "enum": ["any", "all"],
          "default": "any",
          "ui_options": {
            "ui_widget": "SelectWidget"
          }
        }
      ]
    },
    {
      "type": "object",
      "id": "advanced_options",
      "label": "Advanced Options",
      "fields": [
        {
          "type": "boolean",
          "id": "all_or_none",
          "label": "All or None",
          "description": "If true, all contacts must be successfully created or the operation will fail",
          "default": false
        },
        {
          "type": "number",
          "id": "timeout",
          "label": "Timeout (seconds)",
          "description": "Maximum time to wait for the CRM API to respond",
          "default": 30,
          "validation": {
            "minimum": 1,
            "maximum": 300
          }
        },
        {
          "type": "number",
          "id": "batch_size",
          "label": "Batch Size",
          "description": "Number of contacts to create in each batch",
          "default": 200,
          "validation": {
            "minimum": 1,
            "maximum": 2000
          }
        }
      ]
    }
  ],
  "ui_options": {
    "ui_order": [
      "crm_connection",
      "object_type",
      "contacts_data",
      "required_fields",
      "duplicate_check",
      "duplicate_criteria",
      "advanced_options"
    ]
  }
}
